<Window x:Class="QR_Code_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:QR_Code_Tool.Converters"
        Title="Программа формирования кодов QR" Height="600" Width="1000" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <converters:ItemTypeConverter x:Key="itemTypeConverter"/>
        <converters:ItemSizeConverter x:Key="itemSizeConverter"/>

        <Style x:Key="popupBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style x:Key="buttonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <Style x:Key="imageButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value= "5,0,5,0"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" IsEnabled="{Binding IsLoggedIn}">

            <Button Style="{StaticResource imageButtonStyle}" ToolTip="Назад" Click="back_Click">
                <Button.Content>
                    <Image Source="pack://siteoforigin:,,,/Resources/gui_back.png"/>
                </Button.Content>
            </Button>

            <Button Style="{StaticResource imageButtonStyle}" ToolTip="Обратно" Click="goUp_Click">
                <Button.Content>
                    <Image Source="pack://siteoforigin:,,,/Resources/gui_undo.png"/>
                </Button.Content>
            </Button>

            <Button Style="{StaticResource imageButtonStyle}" ToolTip="Обновить" Click="refresh_Click">
                <Button.Content>
                    <Image Source="pack://siteoforigin:,,,/Resources/gui_refresh.png"/>
                </Button.Content>
            </Button>

            <Button Style="{StaticResource imageButtonStyle}" ToolTip="В домашнюю дирректорию" Click="home_Click">
                <Button.Content>
                    <Image Source="pack://siteoforigin:,,,/Resources/gui_home.png"/>
                    </Button.Content>
            </Button>
            
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
            <Label Content="{Binding FolderPath}"/>
        </StackPanel>

        <DataGrid Grid.Row="2" ItemsSource="{Binding FolderItems}" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True" SelectionChanged="gridItems_SelectionChanged">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование"     Width="350" Binding="{Binding Path=Name}"/>
                <DataGridTextColumn Header="Дата"             Width="110" Binding="{Binding Path=Modified, StringFormat='dd/MM/yyyy hh:mm'}"/>
                <DataGridTextColumn Header="Размер"           Width="110" Binding="{Binding Path=Size, Converter={StaticResource itemSizeConverter}}"/>
                <DataGridTextColumn Header="Тип"              Width="110" Binding="{Binding Path=Type, Converter={StaticResource itemTypeConverter}}"/>
                <DataGridTextColumn Header="Публичная ссылка" Width="*"   Binding="{Binding Path=PublicUrl}" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Обновить"          Click="refresh_Click"></MenuItem>
                    <MenuItem Header="Создать ссылку"    Click="publish_Click"></MenuItem>
                    <MenuItem Header="Удалить ссылку"    Click="unpublish_Click"></MenuItem>
                    <MenuItem Header="Копировать ссылку" Click="copiLink_Click"></MenuItem>
                    <MenuItem Header="Печать QR"         Click="printQR_Click"></MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>           
        </DataGrid>

        <DockPanel  Grid.Row="3" VerticalAlignment="Bottom" IsEnabled="{Binding IsLoggedIn}" HorizontalAlignment="Left">        
            <Button Style="{StaticResource buttonStyle}" Content="Печать QR" Click="printQR_Click" Width="110" />
            <Button Style="{StaticResource buttonStyle}" Content="Создать ссылку" Click="publish_Click" Width="110" />
            <Button Style="{StaticResource buttonStyle}" Content="Удалить ссылку" Click="unpublish_Click" Width="110" />
            <Button Style="{StaticResource buttonStyle}" Content="Kопировать ссылку"  Click="copiLink_Click" Width="110" />
            <Button Style="{StaticResource buttonStyle}" Content="Загрузить файлы" Click="upLoadFile_Click" Width="110" />
            <Button Style="{StaticResource buttonStyle}" Content="Удалить файлы" Click="deleteFile_Click" Width="110" />
        </DockPanel>
        
        <StackPanel Grid.Row="2" VerticalAlignment="Center">
            <ProgressBar Name="progressBar" IsIndeterminate="True" Width="550" Height="20" Margin="25,0,0,0" Visibility="Collapsed"/>
        </StackPanel>

        <DockPanel Grid.Row="3" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Style="{StaticResource buttonStyle}" IsEnabled="{Binding IsLoggedIn}" HorizontalAlignment="Right" Content="Logout" Click="logOut_Click" />
            <Button Style="{StaticResource buttonStyle}" IsEnabled="{Binding IsLoggedOut}" HorizontalAlignment="Right" Content="Login" Click="login_Click" />
        </DockPanel>  
        


        <!--<Popup Name="popupNewFolder" StaysOpen="False" Placement="Center" MaxWidth="250" PopupAnimation="Scroll" IsOpen="False">
            <Border Style="{StaticResource popupBorderStyle}">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBox Name="txtNewFolderName" Text="NewFolder" Width="150"/>                  
                </StackPanel>
            </Border>
        </Popup>

        <Popup x:Name="popupLink" StaysOpen="False" Placement="Center" PopupAnimation="Scroll" IsOpen="False">
            <Border Style="{StaticResource popupBorderStyle}">
                <StackPanel Name="linkPanel" Width="260" Height="75">
                    <TextBlock Text="Link copied to clipboard" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBox x:Name="txtLink" Width="250" Height="25" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Popup>-->

    </Grid>
</Window>
