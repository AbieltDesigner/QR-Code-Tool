<Window x:Class="QR_Code_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:QR_Code_Tool.Converters"
        Title="Программа формирования кодов QR" Height="600" Width="1000" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <converters:ItemTypeConverter x:Key="itemTypeConverter"/>
        <converters:ItemSizeConverter x:Key="itemSizeConverter"/>

        <Style x:Key="popupBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style x:Key="buttonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <Style x:Key="imageButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value= "5,0,5,0"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" IsEnabled="{Binding IsLoggedIn}">

            <Button Style="{StaticResource imageButtonStyle}" Command="{Binding ClickBack}" ToolTip="Назад">
                <Button.Content>
                    <Image Source="pack://siteoforigin:,,,/Resources/gui_back.png"/>
                </Button.Content>
            </Button>

            <Button Style="{StaticResource imageButtonStyle}" Command="{Binding ClickGoUp}" ToolTip="Обратно">
                <Button.Content>
                    <Image Source="pack://siteoforigin:,,,/Resources/gui_undo.png"/>
                </Button.Content>
            </Button>

            <Button Style="{StaticResource imageButtonStyle}" Command="{Binding ClickRefresh}" ToolTip="Обновить">
                <Button.Content>
                    <Image Source="pack://siteoforigin:,,,/Resources/gui_refresh.png"/>
                </Button.Content>
            </Button>

            <Button Style="{StaticResource imageButtonStyle}" Command="{Binding ClickHome}" ToolTip="В домашнюю дирректорию">
                <Button.Content>
                    <Image Source="pack://siteoforigin:,,,/Resources/gui_home.png"/>
                    </Button.Content>
            </Button>
            
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
            <Label Content="{Binding FolderPath}"/>
        </StackPanel>

        <DataGrid Grid.Row="2" ItemsSource="{Binding FolderItems}" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True" SelectionChanged="gridItems_SelectionChanged">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование"     Width="350" Binding="{Binding Path=Name}"/>
                <DataGridTextColumn Header="Дата"             Width="110" Binding="{Binding Path=Modified, StringFormat='dd/MM/yyyy hh:mm'}"/>
                <DataGridTextColumn Header="Размер"           Width="110" Binding="{Binding Path=Size, Converter={StaticResource itemSizeConverter}}"/>
                <DataGridTextColumn Header="Тип"              Width="110" Binding="{Binding Path=Type, Converter={StaticResource itemTypeConverter}}"/>
                <DataGridTextColumn Header="Публичная ссылка" Width="*"   Binding="{Binding Path=PublicUrl}" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Обновить"          Command="{Binding ClickRefresh}"></MenuItem>
                    <MenuItem Header="Печать QR"         Command="{Binding ClickPrintQR}"></MenuItem>                   
                    <MenuItem Header="Создать ссылку"    Command="{Binding ClickPublish}"></MenuItem>
                    <MenuItem Header="Удалить ссылку"    Command="{Binding ClickUnPublish}"></MenuItem>
                    <MenuItem Header="Копировать ссылку" Command="{Binding ClickCopiLink}"></MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>           
        </DataGrid>

        <DockPanel  Grid.Row="3" VerticalAlignment="Bottom" IsEnabled="{Binding IsLoggedIn}" HorizontalAlignment="Left">
            <Button Style="{StaticResource buttonStyle}" Content="Печать QR"         Command="{Binding ClickPrintQR}" Width="110" />
            <Button Style="{StaticResource buttonStyle}" Content="Создать ссылку"    Command="{Binding ClickPublish}" Width="110" />
            <Button Style="{StaticResource buttonStyle}" Content="Удалить ссылку"    Command="{Binding ClickUnPublish}" Width="110" />
            <Button Style="{StaticResource buttonStyle}" Content="Kопировать ссылку" Command="{Binding ClickCopiLink}" Width="110" />
            <Button Style="{StaticResource buttonStyle}" Content="Загрузить файлы"   Command="{Binding ClickUpLoadFile}" Width="110" />
            <Button Style="{StaticResource buttonStyle}" Content="Загрузить папку"   Command="{Binding ClickUpLoadFolder}" Width="110" />
            <Button Style="{StaticResource buttonStyle}" Content="Удалить файлы"     Command="{Binding ClickDeleteFile}" Width="110" />
        </DockPanel>
        
        <StackPanel Grid.Row="2" VerticalAlignment="Center">
            <ProgressBar IsIndeterminate="True" Width="550" Height="20" Margin="25,0,0,0" Visibility="{Binding IsProressVisibility}"/>
        </StackPanel>

        <DockPanel Grid.Row="3" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Style="{StaticResource buttonStyle}" IsEnabled="{Binding IsLoggedIn}"  Command="{Binding ClickLogOut}" HorizontalAlignment="Right" Content="Logout" />
            <Button Style="{StaticResource buttonStyle}" IsEnabled="{Binding IsLoggedOut}" Command="{Binding ClickLogIn}" HorizontalAlignment="Right" Content="Login"  />
        </DockPanel>         

    </Grid>
</Window>
